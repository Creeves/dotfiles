#!/usr/bin/env bash

LOCAL_OS="other"

# Mac OS X
if [ -d /home/vagrant ]; then
    LOCAL_OS="Vagrant"

elif [ "$(uname)" == "Darwin" ]; then
    LOCAL_OS="Mac"

# Linux
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
    LOCAL_OS="Linux"

# Windows
elif [ "$(expr substr $(uname -s) 1 10)" == "MINGW32_NT" ]; then
    LOCAL_OS="Win"

# Cygwin
elif [ "$(expr substr $(uname -s) 1 6)" == "CYGWIN" ]; then
    LOCAL_OS="CYGWIN"

fi

echo "$LOCAL_OS"

# vim: set syn=sh :
