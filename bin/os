#!/usr/bin/env bash

# Define a fallback `OS`
LOCAL_OS="other"

# Mac OS X
if [ "$(uname)" == "Darwin" ]; then
    LOCAL_OS="mac"

# Linux
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
    LOCAL_OS="linux"

# Windows
elif [ "$(expr substr $(uname -s) 1 10)" == "MINGW32_NT" ]; then
    LOCAL_OS="win"

# Cygwin
elif [ "$(expr substr $(uname -s) 1 6)" == "CYGWIN" ]; then
    LOCAL_OS="cygwin"

fi

# Output the result
echo "$LOCAL_OS"

# vim: set syn=sh :
