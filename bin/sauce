#!/bin/bash

INSTALL_DIR=$HOME/Sites/dotfiles

declare -a files=(
    ${INSTALL_DIR}/shell/bash_paths
    ${INSTALL_DIR}/shell/bash_options
    ${INSTALL_DIR}/shell/bash_exports
    ${INSTALL_DIR}/shell/aliases/*
    ${INSTALL_DIR}/shell/aliases/companies/*
    ${INSTALL_DIR}/shell/functions/*
    ${INSTALL_DIR}/shell/prev_dir
    ${INSTALL_DIR}/shell/bash_prompt
    ${INSTALL_DIR}/.bash_profile.local
)

declare -a comps=(
    ${INSTALL_DIR}/shell/completions/*
)

for file in "${files[@]}"
do
    if [ -f $file ]; then
        source $file
    fi
done

for comp in "${comps[@]}"
do
    if [ -f $comp ]; then
        . $comp
    fi
done

# vim: set syn=sh :
