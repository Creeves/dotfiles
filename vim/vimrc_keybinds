" Change mapleader
let mapleader=","
let g:mapleader=","

" Pressing `j` and `k` really do move you to the next or prev lines
nnoremap j gj
nnoremap k gk

" Make sure I don't enter that bullshit ex mode
nnoremap Q <Nop>

" Unmap the arrow keys
ino <left>  <Nop>
ino <down>  <Nop>
ino <up>    <Nop>
ino <right> <nop>
vno <left>  <Nop>
vno <down>  <Nop>
vno <up>    <Nop>
vno <right> <Nop>
no <left>   <Nop>
no <down>   <Nop>
no <up>     <Nop>
no <right>  <Nop>

" Completly replace vims search functionality
map / <Plug>(easymotion-sn)
map n <Plug>(easymotion-next)
map N <Plug>(easymotion-prev)

" Easy v-splitting
nmap <leader>v :vsplit<cr>
nmap <leader>V <C-w>q<ctr>
nmap <leader>1 :vertical resize -20<cr>
nmap <leader>1 :vertical resize -20<cr>
nmap <leader>2 :vertical resize -5<cr>
nmap <leader>3 <C-w>=<cr>
nmap <leader>4 :vertical resize +5<cr>
nmap <leader>5 :vertical resize +20<cr>

" Basic tab operation
nmap <leader>t :tabnew<cr>
nmap <leader>x :tabclose<cr>
nmap <leader>X :tabclose!<cr>
nmap <leader>o :tabonly<cr>
nmap <leader>O :tabonly!<cr>

" Fast saves and quits
nmap <leader>w :w!<cr>
nmap <leader>W :wq!<cr>
nmap <leader>q :q<cr>
nmap <leader>Q :qa!<cr>

" Quickly show the diff in the current file
nmap <leader>d :w !diff % -<cr>

" Select all text on the page
nmap <leader>a gg0vG$

" Strip trailing whitespace
nmap <leader>$ :call StripTrailingWhitespace()<CR>

" Auto change directory to match current file ,cd
nmap <leader>cd :cd %:p:h<CR>:pwd<CR>

" Custom keybind to enter paste mode, paste, then exit out
nmap <leader>p :set paste<cr>"+p:set nopaste<cr>

" Define a quick way to toggle hiding/showing special characters
nmap <leader>s :set list<cr>
nmap <leader>S :set nolist<cr>

" Include easy motions line support
map <Leader>h <Plug>(easymotion-linebackward)
map <Leader>j <Plug>(easymotion-j)
map <Leader>k <Plug>(easymotion-k)
map <Leader>l <Plug>(easymotion-lineforward)

" Bind a key to hide and show the nerdtree page
nmap <leader>b :NERDTreeToggle<cr>
