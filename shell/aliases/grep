#!/usr/bin/env bash

# Makes using `grep` all that much easier. Where;
# i: case insensitive
# r: recursive
# F: makes grep search with a string instead of regex
# l: list of filenames instead of contexts
alias   grp="grep --color -iF"
alias  grpr="grep --color -irF"
alias  grpl="grep --color -iFl"
alias grprl="grep --color -irFl"

# Allow for typos
alias grplr="greprl"

# vim: set syn=sh :
